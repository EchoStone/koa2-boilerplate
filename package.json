{
  "name": "koa2-boilerplate",
  "version": "0.1.1",
  "description": "The boilerplate project for KOA 2.",
  "scripts": {
    "clean": "rm -rf dist/*",
    "start": "node bin/server.js",
    "build:app": "babel app -d dist/app -s",
    "build:lib": "babel lib -d dist/lib -s",
    "build:config": "babel config -d dist/config -s",
    "build:copyfiles": "cp package.json dist/ && cp config/*.yml dist/config/ && cp config/*.yaml dist/config/ && cp -r bin/ dist/bin",
    "build:all": "npm run build:app && npm run build:lib && npm run build:config",
    "build": "npm run clean && npm run build:all && npm run build:copyfiles",
    "dev": "nodemon bin/server.js",
    "debug": "icebug src/bin/server.js",
    "debug-brk": "npm run debug -- --break",
    "test": "mocha test/**/*.js --compilers js:babel-register --require test/_helpers",
    "test-watch": "npm run test -- --watch",
    "lint": "eslint src/ test/",
    "lint-watch": "esw -w src/ test/"
  },
  "author": {
    "name": "Lanvige Jiang"
  },
  "contributors": [
    {
      "name": "Lanvige Jiang"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "app-module-path": "^2.0.0",
    "awilix": "^2.2.1",
    "glob": "^7.1.0",
    "ip": "^1.1.3",
    "kcors": "^1.3.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-router": "^7.0.1",
    "lodash": "^4.16.2",
    "mysql2": "^1.1.0",
    "sequelize": "^4.0.0-2",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2017": "^1.6.1",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "^3.2.2",
    "eslint-watch": "^2.1.7",
    "icebug": "^0.1.6",
    "mocha": "^3.0.0",
    "nodemon": "^1.8.1",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.4.0",
    "supertest": "^2.0.0"
  }
}
