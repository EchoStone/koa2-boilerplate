{
  "name": "koa2-boilerplate",
  "version": "0.1.1",
  "description": "The boilerplate project for KOA 2.",
  "scripts": {
    "clean": "rm -rf dist/*",
    "start": "node bin/server.js",
    "build:app": "babel app -d dist/app -s",
    "build:lib": "babel lib -d dist/lib -s",
    "build:config": "babel config -d dist/config -s",
    "build:all": "npm run build:app && npm run build:lib && npm run build:config",
    "build:copybin": "mkdir -p dist/bin && cp bin/server.js dist/bin/server.js",
    "build:copyconfig": "cp config/*.yml dist/config/",
    "build:copyappfile": "cp package.json dist/ && cp yarn.lock dist/ && cp Dockerfile dist/ && cp docker-compose.yml dist/",
    "build:copyall": "npm run build:copybin && npm run build:copyconfig && npm run build:copyappfile",
    "build": "npm run clean && npm run build:all && npm run build:copyall",
    "dev": "node bin/server.js",
    "debug": "icebug src/bin/server.js",
    "debug-brk": "npm run debug -- --break",
    "test": "mocha test/**/*.js --compilers js:babel-register --require test/_helpers",
    "test-watch": "npm run test -- --watch",
    "lint": "eslint app/ bin/ lib/ test/",
    "lint-watch": "esw -w app/ bin/ lib/ test/"
  },
  "author": {
    "name": "Lanvige Jiang"
  },
  "contributors": [
    {
      "name": "Lanvige Jiang"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "ali-oss": "^4.7.3",
    "app-module-path": "^2.2.0",
    "awilix": "^2.2.1",
    "awilix-koa": "^0.1.1",
    "bluebird": "^3.4.7",
    "glob": "^7.1.1",
    "ip": "^1.1.4",
    "kcors": "^1.3.1",
    "koa": "2.0.0-alpha.8",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-multer": "^1.0.1",
    "koa-router": "^7.1.0",
    "koa-snake-res": "^0.2.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "mysql2": "^1.1.2",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.3",
    "sequelize": "^4.0.0-2",
    "sha1": "^1.1.1",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "csv-parse": "^1.1.7",
    "eslint": "^3.13.0",
    "eslint-watch": "^2.1.7",
    "icebug": "^0.1.6",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "sequelize-cli": "^2.5.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.4.8",
    "supertest": "^2.0.1",
    "yargs": "^6.6.0"
  }
}
